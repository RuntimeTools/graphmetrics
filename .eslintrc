{
  "extends": "strongloop",
  "env": {
    "browser": true
  },
  "parserOptions": { "ecmaVersion": 6 },
  "rules": {
    "eqeqeq": "off",
    "max-len": ["error", 120, 8, {"ignoreComments": true}],
    "comma-dangle": "off",
    "spaced-comment": ["error", "always", { "exceptions": ["*"] }],
    "strict": ["error", "never"]
  },
  "globals": {
    "d3": false,
    "getTimeFormat": false,
    "canvasWidth": true,
    "canvasHeight": true,
    "margin": true,
    "graphWidth": true,
    "graphHeight": true,
    "monitoringStartTime": false,
    "maxTimeWindow": false,
    "httpCanvasWidth": true,
    "httpGraphWidth": true,
    "tallerGraphHeight": true,
    "myurl": false,
    "socket": false,
    "$": false,
    "resize": false,
    "memPoolsCanvasWidth": true,
    "memPoolsGraphWidth": true
  }
}
